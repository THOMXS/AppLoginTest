<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/txt_cep"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:text="cep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_number"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="99dp"
        tools:text="Name" />

    <EditText
        android:id="@+id/txt_complement"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:text="Complemento"
        app:layout_constraintTop_toBottomOf="@+id/txt_cep"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:ems="10"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@+id/txt_complement"
        tools:layout_editor_absoluteX="99dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CADASTRO"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:singleLine="false"
        android:text="Nome Completo"
        android:contentDescription="Nome Completo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236"
        tools:layout_editor_absoluteX="99dp"
        tools:text="Name" />

    <EditText
        android:id="@+id/txt_number"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:text="Número"
        app:layout_constraintTop_toBottomOf="@+id/txt_address"
        tools:layout_editor_absoluteX="99dp" />

    <EditText
        android:id="@+id/txt_address"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:ems="10"
        android:text="Endereço"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        tools:layout_editor_absoluteX="99dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#629FF2"
        android:text="SALVAR"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>